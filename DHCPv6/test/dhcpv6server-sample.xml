<?xml version="1.0" encoding="UTF-8"?>
<dhc:dhcpV6ServerConfig xmlns:dhc="http://ietf.org/dhc/dhcpv6">
	
	<policies>
		<policy>
			<name>sendRequestedOptionsOnly</name>
			<value>false</value>
		</policy>
	</policies>

	<serverIdOption>
		<opaqueData>
			<hexValue>abcdef0123456789</hexValue>
		</opaqueData>
	</serverIdOption>

	<msgConfigOptions>
		<dnsServersOption>
			<ipAddress>3ffe::0001</ipAddress>
			<ipAddress>3ffe::0002</ipAddress>
			<ipAddress>3ffe::0003</ipAddress>
		</dnsServersOption>
		<domainSearchListOption>
			<domainName>foo.com.</domainName>
			<domainName>bar.com.</domainName>
			<domainName>yuk.com.</domainName>
		</domainSearchListOption>
	</msgConfigOptions>

	<filters>
	  <filter>
		<name>UserClass Filter Group 1</name>
		<filterExpressions>
			<filterExpression>
				<optionExpression code="15">
					<opaqueOption>
						<opaqueData>
							<asciiValue>FilterUserClass</asciiValue>
						</opaqueData>
					</opaqueOption>
				</optionExpression>
			</filterExpression>
		</filterExpressions>
		<msgConfigOptions>
			<domainListOption>
				<domainName>filter.com.</domainName>
			</domainListOption>
		</msgConfigOptions>
	  </filter>
	</filters>
	
	<links>
		<link>
			<name>Client Link 1</name>
			<address>2001:DB8:1::/48</address>
			<iaNaConfigOptions>
				<dnsServersOption>
					<ipAddress>2001:DB8:1::1</ipAddress>
				</dnsServersOption>
			</iaNaConfigOptions>
			<linkFilters>
			  	<linkFilter>
					<name>Support Reconfigure</name>
					<filterExpressions>
						<filterExpression>
							<optionExpression code="20">
							</optionExpression>
						</filterExpression>
					</filterExpressions>
					<naAddrPools>
						<pool>
							<range>2001:DB8:1::10A-2001:DB8:1::1FF</range>
							<addrConfigOptions>
								<sipServerAddressesOption>
									<ipAddress>2001:DB8:1::1:1</ipAddress>
								</sipServerAddressesOption>
							</addrConfigOptions>
						</pool>
					</naAddrPools>
			  	</linkFilter>
			</linkFilters>
			<naAddrPools>
				<pool>
					<range>2001:DB8:1::0A-2001:DB8:1::FF</range>
					<addrConfigOptions>
						<sipServerAddressesOption>
							<ipAddress>2001:DB8:1::1:1</ipAddress>
						</sipServerAddressesOption>
					</addrConfigOptions>
				</pool>
			</naAddrPools>
		</link>
		<link>
			<name>Client Link 2</name>
			<address>2001:DB8:2::/48</address>
			<iaNaConfigOptions>
				<dnsServersOption>
					<ipAddress>2001:DB8:2::1</ipAddress>
				</dnsServersOption>
			</iaNaConfigOptions>
			<linkFilters>
			  	<linkFilter>
					<name>Support Reconfigure</name>
					<filterExpressions>
						<filterExpression>
							<optionExpression code="20">
							</optionExpression>
						</filterExpression>
					</filterExpressions>
					<naAddrPools>
						<pool>
							<range>2001:DB8:2::10A-2001:DB8:2::1FF</range>
							<addrConfigOptions>
								<sipServerAddressesOption>
									<ipAddress>2001:DB8:2::1:1</ipAddress>
								</sipServerAddressesOption>
							</addrConfigOptions>
						</pool>
					</naAddrPools>
			  	</linkFilter>
			</linkFilters>
		</link>
		<link>
			<name>Client Link 3</name>
			<address>2001:DB8:3::/48</address>
			<iaNaConfigOptions>
				<dnsServersOption>
					<ipAddress>2001:DB8:3::1</ipAddress>
				</dnsServersOption>
			</iaNaConfigOptions>
		</link>
		<link>
			<name>Client Link 4</name>
			<address>2001:DB8:4::/48</address>
			<iaNaConfigOptions>
				<dnsServersOption>
					<ipAddress>2001:DB8:4::1</ipAddress>
				</dnsServersOption>
			</iaNaConfigOptions>
		</link>
		<link>
			<name>Client Link 5</name>
			<address>2001:DB8:5::/48</address>
			<iaNaConfigOptions>
				<dnsServersOption>
					<ipAddress>2001:DB8:5::1</ipAddress>
				</dnsServersOption>
			</iaNaConfigOptions>
		</link>
	</links>

</dhc:dhcpV6ServerConfig>
